<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Categories"
        android:textAlignment="center"
        android:textColor="@color/grey"
        android:textSize="30dp"
        android:textStyle="italic" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choose: don't like it, little bit interested, love the topic"
        android:textAlignment="center"
        android:textColor="@color/grey"
        android:textSize="15dp"
        android:textStyle="italic" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/business"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="16dp"
            android:scaleType="fitXY"
            android:src="@drawable/walkthrough_business" />
        <ImageView
            android:id="@+id/entertainment"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="fitXY"
            android:layout_margin="16dp"
            android:src="@drawable/walkthrough_entertainment" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/health"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="fitXY"
            android:layout_margin="16dp"
            android:src="@drawable/walkthrough_health" />
        <ImageView
            android:id="@+id/science"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="fitXY"
            android:layout_margin="16dp"
            android:src="@drawable/walkthrough_science" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/sports"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="fitXY"
            android:layout_margin="16dp"
            android:src="@drawable/walkthrough_sports" />
        <ImageView
            android:id="@+id/technology"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="fitXY"
            android:layout_margin="16dp"
            android:src="@drawable/walkthrough_technology"
            android:onClick="updateCategory"/>
    </LinearLayout>

</LinearLayout>