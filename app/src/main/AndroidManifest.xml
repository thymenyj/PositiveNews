<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.thymen.positivenews">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".Globals.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:screenOrientation="portrait">
        <activity android:name=".Activity.LoginActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activity.HomeActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".Activity.RegisterActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".Activity.ResetActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".Fragment.ProfileFragment"
            android:screenOrientation="portrait"/>
        <activity android:name=".FragmentTab.HomePersonalTab"
            android:screenOrientation="portrait"/>
        <activity android:name=".Activity.ArticleActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".Fragment.SourcesFragment"
            android:screenOrientation="portrait"/>
        <activity android:name=".Activity.WalkthroughActivity"
            android:screenOrientation="portrait"/>
    </application>

</manifest>